{
    "name": "angular-testing",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "start-all": "concurrently \"npm start\" \"npm run start-dummy-server\"",
        "build": "ng build",
        "test": "jest",
        "lint": "ng lint",
        "e2e": "start-test start-all http://localhost:4200 cypress:run",
        "e2e:browser": "start-test start-all http://localhost:4200 cypress:open",
        "start-dummy-server": "cd dummy-server && node server.js",
        "test:watch": "jest --watch",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "cypress:run:browser": "cypress run -b chrome"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~8.2.14",
        "@angular/cdk": "~8.2.3",
        "@angular/common": "~8.2.14",
        "@angular/compiler": "~8.2.14",
        "@angular/core": "~8.2.14",
        "@angular/forms": "~8.2.14",
        "@angular/material": "^8.2.3",
        "@angular/platform-browser": "~8.2.14",
        "@angular/platform-browser-dynamic": "~8.2.14",
        "@angular/router": "~8.2.14",
        "@auth0/angular-jwt": "^3.0.1",
        "@briebug/jest-schematic": "^2.1.1",
        "@swimlane/ngx-charts": "^13.0.2",
        "rxjs": "~6.4.0",
        "tslib": "^1.10.0",
        "zone.js": "~0.9.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.803.23",
        "@angular/cli": "~8.3.23",
        "@angular/compiler-cli": "~8.2.14",
        "@angular/language-service": "~8.2.14",
        "@cypress/webpack-preprocessor": "^4.1.3",
        "@types/jest": "25.1.2",
        "@types/node": "~8.9.4",
        "codelyzer": "^5.0.0",
        "concurrently": "^5.1.0",
        "cypress": "^4.1.0",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "jest": "25.1.0",
        "jest-preset-angular": "8.0.0",
        "prettier": "^1.19.1",
        "protractor": "~5.4.0",
        "start-server-and-test": "^1.10.8",
        "ts-loader": "^6.2.1",
        "ts-node": "~7.0.0",
        "tslint": "~5.15.0",
        "typescript": "~3.5.3"
    },
    "jest": {
        "preset": "jest-preset-angular",
        "roots": [
            "src"
        ],
        "transform": {
            "^.+\\.(ts|js|html)$": "ts-jest"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/setup-jest.ts"
        ],
        "moduleNameMapper": {
            "@app/(.*)": "<rootDir>/src/app/$1",
            "@assets/(.*)": "<rootDir>/src/assets/$1",
            "@core/(.*)": "<rootDir>/src/app/core/$1",
            "@env": "<rootDir>/src/environments/environment",
            "@src/(.*)": "<rootDir>/src/src/$1",
            "@state/(.*)": "<rootDir>/src/app/state/$1"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "<rootDir>/tsconfig.spec.json",
                "stringifyContentPathRegex": "\\.html$",
                "astTransformers": [
                    "jest-preset-angular/build/InlineFilesTransformer",
                    "jest-preset-angular/build/StripStylesTransformer"
                ]
            }
        }
    }
}
